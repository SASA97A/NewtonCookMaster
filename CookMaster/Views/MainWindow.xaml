<Window x:Class="CookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster"
        mc:Ignorable="d"
        Title="Log in" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="50">
            <TextBlock Text="Cook Master" FontSize="30" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtUsername" Margin="0,10,0,0" />
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,0"/>

            <Button Content="Sign In" Click="SignIn_Click" Margin="0,20,0,0"/>
            <Button Content="Create New User" Click="Register_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
