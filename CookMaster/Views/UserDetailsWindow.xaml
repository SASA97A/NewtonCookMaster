<Window x:Class="CookMaster.Views.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        mc:Ignorable="d"
        Title="User Details" Height="650" Width="800">
    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Edit Profile" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Change Username (min 3 chars)"/>
            <TextBox x:Name="txtUsername" Margin="0,5,0,15"/>

            <TextBlock Text="Change Country"/>
            <ComboBox x:Name="cmbCountry" Margin="0,5,0,15">
                <ComboBoxItem Content="Sweden"/>
                <ComboBoxItem Content="Denmark"/>
                <ComboBoxItem Content="Finland"/>
                <ComboBoxItem Content="Germany"/>
                <ComboBoxItem Content="France"/>
            </ComboBox>

            <Separator Margin="0,10"/>
            <TextBlock Text="Change Password" FontWeight="Bold" Margin="0,10"/>

            <TextBlock Text="Old Password"/>
            <PasswordBox x:Name="txtOldPass" Margin="0,5,0,10"/>

            <TextBlock Text="New Password  (min 5 chars)"/>
            <PasswordBox x:Name="txtNewPass" Margin="0,5,0,10"/>

            <TextBlock Text="Confirm New Password"/>
            <PasswordBox x:Name="txtConfirmPass" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" IsCancel="True" Width="80" Margin="0,0,10,0"/>
                <Button Content="Save Changes" Click="Save_Click" Width="100" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
